.row.header
  .five.columns.push-seven
    %ul.nav
      %li
        =link_to 'About', "/about"
      %li
        =link_to 'City Details', "/city_details"
      %li
        =link_to 'Contact', "/contact"
        
  .five.columns.pull-five
    %a.logo{:href => '/'}
      %h1 Weather Rooster
      -if controller.action_name == 'main'
        -headline = "Today is " + Time.current.strftime("%A, %B, %d")
      -else
        -headline = " The Most Accurate Weather"
      
      %p=headline
    
  .two.columns.pull-five
    =render 'meta/twitter_tweet'
  
