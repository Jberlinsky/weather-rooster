= form_for @error do |f|
  -if @error.errors.any?
    #error_explanation
      %h2= "#{pluralize(@error.errors.count, "error")} prohibited this error from being saved:"
      %ul
        - @error.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
