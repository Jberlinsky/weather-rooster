= form_for @weather_record do |f|
  -if @weather_record.errors.any?
    #error_explanation
      %h2= "#{pluralize(@weather_record.errors.count, "error")} prohibited this weather_record from being saved:"
      %ul
        - @weather_record.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :high
    = f.number_field :high
  .field
    = f.label :low
    = f.number_field :low
  .field
    = f.label :weather_date
    = f.date_select :weather_date
  .field
    = f.label :chance_of_rain
    = f.number_field :chance_of_rain
  .field
    = f.label :recorded_at
    = f.datetime_select :recorded_at
  .field
    = f.label :weather_service_id
    = f.number_field :weather_service_id
  .field
    = f.label :user_id
    = f.number_field :user_id
  .actions
    = f.submit 'Save'
