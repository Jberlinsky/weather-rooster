= form_for @weather_service do |f|
  -if @weather_service.errors.any?
    #error_explanation
      %h2= "#{pluralize(@weather_service.errors.count, "error")} prohibited this weather_service from being saved:"
      %ul
        - @weather_service.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :full_name
    = f.text_field :full_name
  .field
    = f.label :short_name
    = f.text_field :short_name
  .field
    = f.label :homepage_url
    = f.text_field :homepage_url
  .field
    = f.label :zipcode_url_template
    = f.text_field :zipcode_url_template
  .field
    = f.label :active
    = f.check_box :active
  .actions
    = f.submit 'Save'
